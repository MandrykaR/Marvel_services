# Этап 1: установка зависимостей и копирование файлов проекта
FROM node:14.21.3 as build

WORKDIR /app

COPY package.json ./
COPY package-lock.json ./

RUN npm install

COPY . .

# Этап 2: сборка приложения
RUN npm run build

# Этап 3: настройка окружения для запуска приложения
FROM nginx:latest

COPY --from=build /app/build /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
